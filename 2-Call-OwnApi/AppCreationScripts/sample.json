{
  "Sample": {
    "Title": "A .NET Core daemon console application calling a custom protected Web API with its own (App-only) identity",
    "Level": 200,
    "Client": ".NET Core (Console)",
    "Service": ".NET Core Web API",
    "RepositoryUrl": "active-directory-dotnetcore-daemon-v2",
    "Endpoint": "AAD v2.0",
    "Languages": [ "dotnet-core", "dotnet-csharp", "aspnetcore", "csharp"  ],
    "Products": ["azure-active-directory","ms-graph",  "microsoft-identity-web", ],
    "devlang":["console","csharp"],
    "name": "Call a protected custom Web API using app-only (Client credentials) flow",
    "Description": "This sample demonstrates a .NET core console application obtaining an Access Token using client credentials (app-only flow) for a custom Web API protected with Microsoft Identity Platform and Microsoft Graph."
  },

  /*
    This section describes the Azure AD Applications to configure, and their dependencies
  */
  "AADApps": [
    {
      "Id": "service",
      "Name": "TodoList-webapi-daemon-v2",
      "Kind": "WebApi",
      "Audience": "AzureADMyOrg",
      "HomePage": "https://localhost:44372",
      "OptionalClaims": {
        "AccessTokenClaims": [ "idtyp" ]
      },
      "Scopes": [ "ToDoList.Read", "ToDoList.ReadWrite" ],
      "AppRoles": [
        {
          "AllowedMemberTypes": [ "Application" ],
          "Name": "ToDoList.Read.All",
          "Description": "Allow application to read all ToDo list items"
        },
        {
          "AllowedMemberTypes": [ "Application" ],
          "Name": "ToDoList.ReadWrite.All",
          "Description": "Allow application to read and write into ToDo list"
        }
      ]      
    },
    {
      "Id": "client",
      "Name": "daemon-console-v2",
      "Kind": "Daemon",
      "Audience": "AzureADMyOrg",      
      "PasswordCredentials": "Auto",
      "UsesROPCOrIWA": false,
      "ReplyUrls": "https://daemon",
      "RequiredResourcesAccess": [
        {
          "Resource": "service",
          "ApplicationPermissions": [ "ToDoList.Read.All|ToDoList.ReadWrite.All" ]
        },
        {
          "Resource": "Microsoft Graph",
          "ApplicationPermissions": [ "User.Read.All" ]
        }
      ],
      "ManualSteps": [
        {
          "Comment" :  "Navigate to the API permissions page and click on 'Grant admin consent for {tenant}'"
        }
      ] 
    }
  ],

  /*
    This section describes how to update the code in configuration files from the apps coordinates, once the apps
    are created in Azure AD.
    Each section describes a configuration file, for one of the apps, it's type (XML, JSon, plain text), its location
    with respect to the root of the sample, and the mappping (which string in the config file is mapped to which value
  */
  "CodeConfiguration": [
    {
      "App": "service",
      "SettingKind": "Text",
      "SettingFile": "\\..\\TodoList-WebApi\\appsettings.json",
      "Mappings": [
        {
          "key": "Domain",
          "value": "$tenantName"
        },
        {
          "key": "TenantId",
          "value": "$tenantId"
        },
        {
          "key": "ClientId",
          "value": "service.AppId"
        }
      ]
    },    
    {
      "App": "client",
      "SettingKind": "Text",
      "SettingFile": "\\..\\Daemon-Console\\appsettings.json",
      "Mappings": [
        {
          "key": "Tenant",
          "value": "$tenantName"
        },
        {
          "key": "ClientId",
          "value": ".AppId"
        },
        {
          "key": "[Enter here a client secret for your application]",
          "value": ".AppKey"
        },
        {
          "key": "Scopes",
          "value": "service.ScopeDefault"
        },
        {
          "key": "TodoListBaseAddress",
          "value": "service.HomePage"
        }
      ]
    }
  ]
}
